# ============================================
# Quantum-Aero F1 Prototype - GenAI Agent Configuration
# Multi-Agent System powered by Claude AI
# ============================================

# ============================================
# ANTHROPIC CLAUDE API
# ============================================
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-api03-your-api-key-here

# Claude Models
ANTHROPIC_MODEL_SONNET=claude-sonnet-4.5-20250929
ANTHROPIC_MODEL_HAIKU=claude-haiku-4-20250514

# Claude Configuration
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.2
ANTHROPIC_TIMEOUT=60

# ============================================
# NATS MESSAGE BROKER
# ============================================
NATS_URL=nats://localhost:4222
NATS_CLUSTER_URL=nats://localhost:6222
NATS_HTTP_PORT=8222
NATS_MAX_PAYLOAD=10485760
NATS_MAX_PENDING=1048576000

# NATS JetStream
NATS_JETSTREAM_ENABLED=true
NATS_STORE_DIR=/data

# ============================================
# SLIM TRANSPORT LAYER
# ============================================
SLIM_HOST=0.0.0.0
SLIM_PORT=6001
SLIM_PROTOCOL=a2a
SLIM_TIMEOUT=30

# ============================================
# MICROSERVICES URLs
# ============================================
ML_SERVICE_URL=http://localhost:8000
PHYSICS_SERVICE_URL=http://localhost:8001
QUANTUM_SERVICE_URL=http://localhost:8002
BACKEND_API_URL=http://localhost:3001

# ============================================
# DATABASE CONNECTIONS
# ============================================
MONGODB_URI=mongodb://localhost:27017/qaero
MONGODB_DATABASE=qaero

REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# Vector Database (Qdrant)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=

# ============================================
# OPENTELEMETRY (Observability)
# ============================================
OTEL_ENABLED=true
OTEL_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=qaero-agents
OTEL_TRACES_EXPORTER=otlp
OTEL_METRICS_EXPORTER=otlp

# ============================================
# AGENT CONFIGURATION
# ============================================

# Master Orchestrator
MASTER_ORCHESTRATOR_PORT=6001
MASTER_ORCHESTRATOR_MODEL=${ANTHROPIC_MODEL_SONNET}
MASTER_ORCHESTRATOR_MAX_TOKENS=4096
MASTER_ORCHESTRATOR_TEMPERATURE=0.2

# Intent Router
INTENT_ROUTER_PORT=6002
INTENT_ROUTER_MODEL=${ANTHROPIC_MODEL_HAIKU}
INTENT_ROUTER_MAX_TOKENS=2048
INTENT_ROUTER_TEMPERATURE=0.1

# Aerodynamics Agent
AERODYNAMICS_PORT=6003
AERODYNAMICS_MODEL=${ANTHROPIC_MODEL_SONNET}
AERODYNAMICS_MAX_TOKENS=2048
AERODYNAMICS_TEMPERATURE=0.2

# ML Surrogate Agent
ML_AGENT_PORT=6004
ML_AGENT_MODEL=${ANTHROPIC_MODEL_HAIKU}
ML_AGENT_MAX_TOKENS=1024
ML_AGENT_TEMPERATURE=0.1

# Quantum Optimizer Agent
QUANTUM_AGENT_PORT=6005
QUANTUM_AGENT_MODEL=${ANTHROPIC_MODEL_SONNET}
QUANTUM_AGENT_MAX_TOKENS=2048
QUANTUM_AGENT_TEMPERATURE=0.3

# Physics Validator Agent
PHYSICS_AGENT_PORT=6006
PHYSICS_AGENT_MODEL=${ANTHROPIC_MODEL_HAIKU}
PHYSICS_AGENT_MAX_TOKENS=1024
PHYSICS_AGENT_TEMPERATURE=0.1

# Analysis Agent
ANALYSIS_AGENT_PORT=6007
ANALYSIS_AGENT_MODEL=${ANTHROPIC_MODEL_SONNET}
ANALYSIS_AGENT_MAX_TOKENS=4096
ANALYSIS_AGENT_TEMPERATURE=0.3

# Visualization Agent
VISUALIZATION_AGENT_PORT=6008
VISUALIZATION_AGENT_MODEL=${ANTHROPIC_MODEL_HAIKU}
VISUALIZATION_AGENT_MAX_TOKENS=1024
VISUALIZATION_AGENT_TEMPERATURE=0.2

# ============================================
# LANGGRAPH CONFIGURATION
# ============================================
LANGGRAPH_CHECKPOINT_ENABLED=true
LANGGRAPH_CHECKPOINT_BACKEND=mongodb
LANGGRAPH_MAX_ITERATIONS=50

# ============================================
# MCP SERVERS
# ============================================
MCP_MESH_DATABASE_PORT=8125
MCP_SIMULATION_HISTORY_PORT=8126
MCP_CFD_TOOLKIT_PORT=8127

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/qaero-agents.log

# ============================================
# SECURITY
# ============================================
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# API Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================
# PERFORMANCE
# ============================================
# Agent Pool Sizes
ML_AGENT_REPLICAS=3
PHYSICS_AGENT_REPLICAS=2
ANALYSIS_AGENT_REPLICAS=1

# Timeouts (seconds)
AGENT_REQUEST_TIMEOUT=30
AGENT_LONG_TIMEOUT=300
CLAUDE_API_TIMEOUT=60

# Caching
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# ============================================
# DEVELOPMENT / PRODUCTION
# ============================================
ENVIRONMENT=development
DEBUG=true
TESTING=false

# ============================================
# MONITORING
# ============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_PASSWORD=admin

# Health Check
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ============================================
# DOCKER CONFIGURATION
# ============================================
COMPOSE_PROJECT_NAME=qaero-agents
DOCKER_NETWORK=qaero-agent-network

# Resource Limits
MASTER_ORCHESTRATOR_CPU=4.0
MASTER_ORCHESTRATOR_MEMORY=8G
ML_AGENT_CPU=2.0
ML_AGENT_MEMORY=4G
QUANTUM_AGENT_CPU=4.0
QUANTUM_AGENT_MEMORY=8G

# ============================================
# NOTES
# ============================================
# 1. Copy this file to .env and fill in your actual values
# 2. NEVER commit .env file to git (it's in .gitignore)
# 3. Get Claude API key from: https://console.anthropic.com/
# 4. Ensure all services are running before starting agents
# 5. Use docker-compose.agents.yml to deploy infrastructure
