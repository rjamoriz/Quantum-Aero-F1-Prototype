# Backend API Gateway DockerfileFROM node:18-alpineWORKDIR /app# Install dependencies first (better caching)COPY package*.json ./RUN npm ci --only=production# Copy source codeCOPY . .# Create logs directoryRUN mkdir -p logs# Expose API portEXPOSE 3001# Health checkHEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \    CMD node -e "require('http').get('http://localhost:3001/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"# Run serverCMD ["node", "src/app.js"]